# ios/fastlane/Fastfile
default_platform(:ios)

platform :ios do
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_KEY_ID"],
      issuer_id: ENV["APP_STORE_ISSUER_ID"],
      key_content: ENV["APP_STORE_P8_KEY"],
      duration: 1200,
      in_house: false
    )

    # Clean any env hints that force adhoc/dev
    ENV.delete('SIGH_AD_HOC')
    ENV.delete('SIGH_DEVELOPMENT')
    ENV.delete('MATCH_TYPE')

    app_id  = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)
    team_id = CredentialsManager::AppfileConfig.try_fetch_value(:team_id) || ENV["APP_STORE_TEAM_ID"]

    # 0) Ensure project uses Automatic signing at build time
    automatic_code_signing(
      path: "Runner.xcodeproj",
      use_automatic_signing: true,
      team_id: team_id,
      targets: ["Runner"] # add other app/extension targets here if you have them
    )
    update_project_team(path: "Runner.xcodeproj", teamid: team_id)

    # 1) Fetch & install the App Store profile for the app target (Runner)
    profile_path = sigh(
      api_key: api_key,
      app_identifier: app_id,
      skip_install: false,
      force: true,
      platform: "ios"
    )

    profile_name = Actions.lane_context[SharedValues::SIGH_NAME]
    UI.user_error!("Missing provisioning profile name") if profile_name.to_s.empty?

    # 2) Build archive (Automatic at build time; allow Xcode to fetch things if needed)
    gym(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      clean: true,
      export_method: "app-store",

      # Embed the right App Store profile ONLY for the app bundle id at export time
      export_options: {
        provisioningProfiles: { app_id => profile_name }
      },

      # Let Xcode create any missing signing bits during the archive step (no manual profiles for Pods)
      xcargs: "-allowProvisioningUpdates CODE_SIGN_STYLE=Automatic DEVELOPMENT_TEAM=#{team_id}"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      submit_for_beta_review: false,
      distribute_external: false
    )
  end
end




