# ios/fastlane/Fastfile
default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_KEY_ID"],
      issuer_id: ENV["APP_STORE_ISSUER_ID"],
      key_content: ENV["APP_STORE_P8_KEY"],
      duration: 1200,
      in_house: false
    )

    # clear conflicting env
    ENV.delete('SIGH_AD_HOC')
    ENV.delete('SIGH_DEVELOPMENT')
    ENV.delete('MATCH_TYPE')

    app_id = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)

    # 1) Create / install an Apple Distribution certificate on this runner
    cert(
      api_key: api_key,
      development: false,    # => Distribution
      platform: "ios",
      force: false           # set true ONLY if you need to revoke an old cert to create a new one
    )

    # 2) Download & install an App Store provisioning profile for that bundle id
    profile_path = sigh(
      api_key: api_key,
      app_identifier: app_id,
      skip_install: false,
      force: true,
      platform: "ios"
    )

    profile_uuid = Actions.lane_context[SharedValues::SIGH_UDID]
    UI.user_error!("Failed to get provisioning profile UUID") if profile_uuid.to_s.empty?

    # 3) Build with that exact profile (manual export)
    gym(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      clean: true,
      export_method: "app-store",
      export_options: {
        provisioningProfiles: { app_id => profile_uuid },
        signingStyle: "manual"
      },
      xcargs: "-allowProvisioningUpdates"
      # If needed, you can pin the identity:
      # codesigning_identity: "Apple Distribution"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      submit_for_beta_review: false,
      distribute_external: false
    )
  end
end




